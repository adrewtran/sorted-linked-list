{
  "name": "antran/sorted-linked-list",
  "description": "A PHP 8.3 library providing a type-safe SortedLinkedList for ints or strings.",
  "type": "library",
  "license": "MIT",
  "require": {
    "php": "^8.3"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.3",
    "squizlabs/php_codesniffer": "^3.10",
    "phpstan/phpstan": "^1.11"
  },
  "autoload": {
    "psr-4": {
      "AnTran\\SortedList\\": "src/AnTran/SortedList"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "AnTran\\SortedList\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": [
      "vendor/bin/phpunit --stop-on-failure --testsuite Unit --colors=always --coverage-text"
    ],
    "coverage": [
      "vendor/bin/phpunit --testsuite Unit --colors=always --coverage-text --coverage-html var/coverage --coverage-clover var/coverage/clover.xml"
    ],
    "test-no-coverage": [
      "vendor/bin/phpunit --stop-on-failure --testsuite Unit --colors=always"
    ],
    "phpcs": [
      "vendor/bin/phpcs --standard=phpcs.xml src tests"
    ],
    "phpstan": [
      "vendor/bin/phpstan analyse -c phpstan.neon.dist --memory-limit=512M"
    ]
  }
}
